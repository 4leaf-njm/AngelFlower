<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Visit-Mapper">
	<resultMap id="visitMap" type="visit">
		<result property="visitDate" column="visit_date" />
	</resultMap>
	
	<select id="selectVisitTodayCount" resultType="int">
		select count(*) from visit where  date_format(visit_date, '%Y-%m-%d') = curdate()
	</select>
	
	<select id="selectVisitMonthCount" resultType="int">
		select count(*) from visit where month(visit_date) = month(curdate())
	</select>
	
	<update id="insertVisit">
		insert into visit() values()
	</update>
</mapper>